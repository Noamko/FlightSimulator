<UserControl x:Class="FlightSimulator.showYawRollPitch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator"
             mc:Ignorable="d" Height="103" Width="158">
    <Grid Margin="0,0,3,-2" RenderTransformOrigin="0.453,0.466">
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <TextBlock   Text="{Binding VM_RollDeg}" FontSize="30" TextAlignment="Center"  TextWrapping="Wrap" HorizontalAlignment="Left" Width="75" Margin="0,0,0,60"  />
        <TextBlock   Text="{Binding VM_PitchDeg}" FontSize="30" TextAlignment="Center" TextWrapping="Wrap" Margin="89,5,0,52" RenderTransformOrigin="0.5,0.5" />
        <TextBlock   Text="{Binding VM_SideSlipDeg}" FontSize="30" TextAlignment="Center" TextWrapping="Wrap"  Margin="45,63,38,-5" RenderTransformOrigin="0.5,0.5" />

    </Grid>
</UserControl>
